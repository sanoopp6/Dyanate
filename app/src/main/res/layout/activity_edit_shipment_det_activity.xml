<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".views.edit.EditShipmentDetActivity"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/FontSizeFifteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/droid_arabic_kufi"
                    android:text="@string/SelectVehicleType"
                    android:textColor="@color/lightBlueColor" />

                <Spinner
                    android:id="@+id/spnr_veh_size"
                    style="@style/FontSizeFifteen"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/layout_rect_tranparent_grey"
                    android:textAlignment="center"
                    android:textColor="@color/blackColor"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/first_vehicle_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/vehicle_one_image_view"
                                        android:layout_width="100dp"
                                        android:layout_height="70dp"
                                        android:background="@color/colorPrimary"
                                        android:padding="5dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/dynate_1"></ImageView>

                                    <TextView
                                        android:id="@+id/vehicle_one_text_view"
                                        style="@style/FontSizeTwelve"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/droid_arabic_kufi"
                                        android:text="@string/Vehicle"
                                        android:textColor="@color/blackColor" />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/first_disable_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#6B9D9B9B"
                                    android:visibility="gone" />
                            </FrameLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/second_vehicle_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/vehicle_two_image_view"
                                        android:layout_width="100dp"
                                        android:layout_height="70dp"
                                        android:background="#FFF"
                                        android:padding="5dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/dynate_1"></ImageView>

                                    <TextView
                                        android:id="@+id/vehicle_two_text_view"
                                        style="@style/FontSizeTwelve"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/droid_arabic_kufi"
                                        android:text="@string/Vehicle"
                                        android:textColor="@color/blackColor" />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/second_disable_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#6B9D9B9B"
                                    android:visibility="gone" />
                            </FrameLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/third_vehicle_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/vehicle_three_image_view"
                                        android:layout_width="100dp"
                                        android:layout_height="70dp"
                                        android:background="#FFF"
                                        android:padding="5dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/dynate_1"></ImageView>

                                    <TextView
                                        android:id="@+id/vehicle_three_text_view"
                                        style="@style/FontSizeTwelve"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/droid_arabic_kufi"
                                        android:text="@string/Vehicle"
                                        android:textColor="@color/blackColor" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/third_disable_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#6B9D9B9B"
                                    android:visibility="gone" />
                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>


                </HorizontalScrollView>

                <TextView
                    style="@style/FontSizeFifteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/droid_arabic_kufi"
                    android:text="@string/Subject"
                    android:textColor="@color/lightBlueColor" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spnr_shipment_type"
                        style="@style/FontSizeFifteen"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/layout_rect_tranparent_grey"
                        android:textAlignment="center"
                        android:textColor="@color/blackColor" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/ccp_down_arrow"></ImageView>

                </FrameLayout>

                <!--        <EditText-->
                <!--            android:id="@+id/edit_subject"-->
                <!--            style="@style/FontSizeFifteen"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="35dp"-->
