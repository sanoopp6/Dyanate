<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:maxHeight="100dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:id="@+id/frameLayout_add_photo"
        android:layout_marginTop="10dp"
        android:layout_width="65dp"
        android:layout_height="65dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="3dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_man_user"
            app:civ_fill_color="@color/lightBlueColor" />
            <!--app:civ_border_width="0.5dp"-->
            <!--app:civ_border_color="#FF000000"/>-->

            <!--<ImageView-->
            <!--android:padding="3dp"-->
            <!--android:tint="@color/colorNavGreen"-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/layout_round_marker_border"-->
            <!--android:scaleType="fitXY"-->
            <!--android:cropToPadding="true"-->
            <!--android:clipToOutline="true"-->
            <!--app:srcCompat="@drawable/ic_man_user" />-->

        <TextView
            android:textColor="@color/blackColor"
            android:background="@android:color/transparent"
            style="@style/FontSizeTen"
            android:textAlignment="center"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="8dp"
            android:id="@+id/textView_add_photo"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="@string/AddPhoto"/>

    </FrameLayout>

    <TextView
        android:textColor="@color/whiteColor"
        android:id="@+id/textView_nav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/AddName"
        android:maxLines="1"
        style="@style/FontSizeFourteen" />
    <!--android:textStyle="bold"-->
    <!--android:paddingTop="@dimen/nav_header_vertical_spacing"-->

</LinearLayout>